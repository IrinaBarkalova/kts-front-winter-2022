{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "App": ["App"],
      "components": ["components"],
      "config": ["config"],
      "styles": ["styles"],
      "utils": ["utils"],
      "store": ["store"],
      "shared": ["shared"],
      "pages": ["./pages"]
    },
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "Node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

